{
  "compilerOptions": {
    "incremental": true,
    "baseUrl": ".",
    "outDir": "dist",
    "rootDirs": [".", "packages"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "module": "ESNext",
    "target": "ES2022",
    "lib": ["es2022", "dom"],
    "ignoreDeprecations": "5.0",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitThis": true,
    "strict": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "paths": {
      "@envelop/core": ["packages/core/src/index.ts"],
      "@envelop/testing": ["packages/testing/src/index.ts"],
      "@envelop/types": ["packages/types/src/index.ts"],
      "@envelop/instruments": ["packages/instruments/src/index.ts"],
      "@envelop/*": ["packages/plugins/*/src/index.ts"]
    }
  },
  "include": ["packages"],
  "exclude": ["**/dist", "**/temp"]
}
